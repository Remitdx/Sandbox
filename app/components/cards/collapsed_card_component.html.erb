<div data-controller='components--cards--collapsed' data-action='click->components--cards--collapsed#toggle' class="collapsed-card <%= @classes %>">
  <h5><%= @title %></h5>
  <div class="details hidden" data-components--cards--collapsed-target='card'>
    <h5><%= @subtitle %></h5>
    <h6><%= @info %></h6>
    <p><%= @description %></p>
  </div>
  <i data-components--cards--collapsed-target='down' class="fa-solid fa-circle-chevron-down"></i>
  <i data-components--cards--collapsed-target='up' class="fa-solid fa-circle-chevron-up d-none"></i>
</div>
