<div class='d-flex'>
  <%= roll_dice.value if roll_dice.value.present? %>
  <%= roll_dice.faces if roll_dice.faces.present? %>
  <%= roll_dice.color if roll_dice.color.present? %>

  <%= link_to games_roll_dice_path(roll_dice) do %>
      <%= render(Buttons::CtaComponent.new(title: 'Show', classes: 'btn-complementary' )) %>
  <% end %>
  <%= link_to edit_games_roll_roll_dice_path(roll_dice.roll_id, roll_dice) do %>
    <%= render(Buttons::CtaComponent.new(title: 'Edit', classes: 'btn-complementary' )) %>
  <% end %>
  <%= link_to games_roll_dice_path(roll_dice), data: { turbo_method: :delete } do %>
    <%= render(Buttons::CtaComponent.new(title: 'Delete', classes: 'btn-complementary' )) %>
  <% end %>
</div>
