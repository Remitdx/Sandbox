<%= simple_form_for [roll, dice], url: dice.id.present? ? games_roll_roll_dice_path(dice) : games_roll_roll_dices_path do |f| %>
  <%= f.input :faces, input_html: { autofocus: true } %>
  <%= f.input :color %>
  <%= f.button :submit, dice.id.present? ? "Edit dice" : 'Add dice', class: 'btn-complementary' %>
<% end %>
