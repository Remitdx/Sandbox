<div class='dice-wrap' >
  <%= simple_form_for [roll, dice], url: dice.id.present? ? utilities_roll_roll_dice_path(roll, dice) : utilities_roll_roll_dices_path do |f| %>
    <%= f.input :faces, required: false, error: false, input_html: { min: 2, step: 1, autofocus: true } %>
    <%= f.input :color, required: false, error: false, collection: Utilities::RollDice::COLORS %>
    <div class="d-flex justify-content-between">
      <%= button_tag(type: 'submit', class: 'btn-cta btn-dark') do %>
        <i class="fa-solid fa-check"></i>
      <% end %>
      <%= link_to utilities_roll_path(@roll), class:'btn-cta btn-light' do %>
        <i class="fa-solid fa-rotate-left"></i>
      <% end %>
    </div>
  <% end %>
</div>
