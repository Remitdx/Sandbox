<div class='timeline'>
  <% i = 1 %>
  <% steps.each do |k,v| %>
    <div class='items-wrapper'>
      <% if i.odd? %>
        <div class='item left'></div>
        <div class='item right'>
          <div class="appearing-wrapper">
            <p><%= v %></p>
          </div>
        </div>
      <% else %>
        <div class='item left'>
          <div class="appearing-wrapper">
            <p><%= v %></p>
          </div>
        </div>
        <div class='item right'></div>
      <% end %>
    </div>
    <% i += 1 %>
  <% end %>
</div>
