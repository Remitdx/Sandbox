<div data-controller='work' data-action='scroll->work#reveal' class='timeline'>
  <% i = 1 %>
  <% experiences.each do |k,v| %>
    <div class='items-wrapper'>
      <% if i.odd? %>
        <div class='item left'>
          <p><%= v['start'].year %></p>
        </div>
        <div class='item right'>
          <div data-work-target='card' class="card-work">
            <h5><%= v['job'] %></h5>
            <h5><%= v['company'] %></h5>
            <h6><%= v['place'] %></h6>
            <p><%= v['description'] %></p>
          </div>
        </div>
      <% else %>
        <div class='item left'>
          <div data-work-target='card' class="card-work">
            <h5><%= v['job'] %></h5>
            <h5><%= v['company'] %></h5>
            <h6><%= v['place'] %></h6>
            <p><%= v['description'] %></p>
          </div>
        </div>
        <div class='item right'>
          <p><%= v['start'].year %></p>
        </div>
      <% end %>
    </div>
    <% i += 1 %>
  <% end %>
</div>
