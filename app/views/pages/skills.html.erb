<main>
  <nav>
    <%= render 'navigation'  %>
  </nav>
  <div class="h1-title">
    <h1><%= t('title_skills') %></h1>
  </div>
  <section class='section-1'>
    <div class="container">
      <div class="h2-title">
        <span></span>
        <h2><%= t('title_skills') %></h2>
      </div>
      <div class="row">
        <% @skills.each do |skill| %>
          <div class="col-12 col-md-4 card-skills-wrapper">
            <div class='h3-title'>
              <h4><%= t(skill['title']) %></h4>
              <h3><%= t(skill['title']) %></h3>
              <% skill.delete('title')  %>
            </div>
            <div class="card-skills">
              <% skill.each do |k,v| %>
                <p><%= k %> : <%= v %></p>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <i class="fa-solid fa-bullseye"></i>
    </div>
  </section>
  <section class="section-2">
    <div class="container">
      <div class="h2-title">
        <span></span>
        <h2>Curriculum vitae</h2>
      </div>
      <%= link_to 'CV en PDF', '/RT_CV_RoR.pdf', target: :_blank %>
    </div>
  </section>
</main>
