<main>
  <nav>
    <%= render 'navigation'  %>
  </nav>
  <div class="h1-title">
    <h1><%= t('title_skills') %></h1>
  </div>
  <section class='section-1'>
    <div class="container">
      <div class="h2-title">
        <span></span>
        <h2><%= t('title_skills') %></h2>
      </div>
      <div class="row">
        <div class="col-12 col-md-4 card-skills-wrapper">
          <div class='h3-title'>
            <h4><%= t('skills.back') %></h4>
            <h3><%= t('skills.back') %></h3>
          </div>
          <div class="card-skills">
            <% @backskills.each do |k,v| %>
              <p><%= k %> : <%= v %></p>
            <% end %>
          </div>
        </div>
        <div class="col-12 col-md-4 card-skills-wrapper">
          <div class='h3-title'>
            <h4><%= t('skills.front') %></h4>
            <h3><%= t('skills.front') %></h3>
          </div>
          <div class="card-skills">
            <% @frontskills.each do |k,v| %>
              <p><%= k %> : <%= v %></p>
            <% end %>
          </div>
        </div>
        <div class="col-12 col-md-4">
          <div class='h3-title'>
            <h4><%= t('skills.devops') %></h4>
            <h3><%= t('skills.devops') %></h3>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class='h3-title'>
            <h4><%= t('skills.soft') %></h4>
            <h3><%= t('skills.soft') %></h3>
          </div>
        </div>
        <div class="col-12 col-md-6">
          <div class='h3-title'>
            <h4><%= t('skills.collaboration') %></h4>
            <h3><%= t('skills.collaboration') %></h3>
          </div>
        </div>
      </div>
      <i class="fa-solid fa-bullseye"></i>
    </div>
  </section>
  <section class="section-2">
    <div class="container">
      <div class="h2-title">
        <span></span>
        <h2>Curriculum vitae</h2>
      </div>
      <%= link_to 'CV en PDF', '/RT_CV_RoR.pdf', target: :_blank %>
    </div>
  </section>
</main>
