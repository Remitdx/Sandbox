<%= render(Navigations::NavigationComponent.new) %>
<main>
  <%= render(Titles::H1titleComponent.new(title: t('title_projects'))) %>
  <section class='section-1'>
    <%= render(Titles::H2titleComponent.new(title: t('projects.professionals'))) %>
    <div class='container'>
      <div class="row">
        <div class="col-12 col-md-6">
          <%= render(Titles::H3titleComponent.new(title: 'Centre Mormal')) %>
          <%= link_to 'https://centremormal.fr/', target: :_blank do %>
            <div class='card-project cm'></div>
          <% end %>
          <p>Site vitrine - conception et développement en tant que freelance - 2022</p>
        </div>
        <div class="col-12 col-md-6">
          <%= render(Titles::H3titleComponent.new(title: 'Mon Projet Anah')) %>
          <%= link_to 'https://monprojet.anah.gouv.fr/', target: :_blank do %>
            <div class='card-project mpa'></div>
          <% end %>
          <p>Plateforme digitale- développement fullstack en équipe de 15 en méthode agile - 2023</p>
        </div>
      </div>
    </div>
  </section>
  <section class='section-2'>
    <%= render(Titles::H2titleComponent.new(title: t('projects.games'))) %>
    <div class='container'>
      <div class="games__bento-grid">
        <%= link_to games_morbacs_path, class: "game-card tictactoe", data: { turbo_method: :post } do %>
          <%= image_tag 'projects/TicTacToe_carre.png' %>
        <% end %>
        <%= link_to games_escapes_path, class: "game-card escape-game", data: { turbo_method: :post } do %>
          <%= image_tag 'projects/Escape_game.png' %>
        <% end %>
        <%= link_to games_dikkeneks_path, class: "game-card dikkenek" do %>
          <%= image_tag 'projects/Dikkenek1.png' %>
        <% end %>
        <%= link_to utilities_rolls_path, class: "game-card dice-roller", data: { turbo_method: :post } do %>
          <%= image_tag 'projects/Dice_roller.png' %>
        <% end %>
        <%= link_to games_puissance4s_path, class: "game-card connect4", data: { turbo_method: :post } do %>
          <%= image_tag 'projects/Connect4.png' %>
        <% end %>
        <div class="game-card next">
          <%= image_tag 'flags/flagFR.svg' %>
        </div>
      </div>
    </div>
  </section>
    <%= link_to t('tournament.title'), utilities_tournaments_path %>
  <section class='section-1'>
    <%= render(Titles::H2titleComponent.new(title: "Open source")) %>
    <div class="container">
      <p><%= t('projects.opensource') %></p>
    </div>
  </section>
</main>
<%= render(Navigations::FooterComponent.new) %>
